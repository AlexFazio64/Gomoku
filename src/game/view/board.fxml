<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameController">
	<VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
	      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<BorderPane VBox.vgrow="ALWAYS">
			<center>
				<HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
					<Label fx:id="player1info" text="Player" HBox.hgrow="ALWAYS"/>
					<Pane HBox.hgrow="ALWAYS"/>
					<Label fx:id="info" layoutX="10.0" layoutY="10.0" text="lorem ipsum dolor sit amet"
					       HBox.hgrow="ALWAYS"/>
					<Pane layoutX="153.0" layoutY="10.0" HBox.hgrow="ALWAYS"/>
					<Label fx:id="player2info" layoutX="153.0" layoutY="10.0" text="DLV2" HBox.hgrow="ALWAYS"/>
					<padding>
						<Insets left="10.0" right="10.0"/>
					</padding>
				</HBox>
			</center>
		</BorderPane>
		<Canvas fx:id="table" onMouseClicked="#place"/>
		<padding>
			<Insets top="10.0"/>
		</padding>
	</VBox>
</AnchorPane>
